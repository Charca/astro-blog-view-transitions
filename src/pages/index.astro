---
import Container from "@components/container.astro";
import Postlist from "@components/postlist.astro";
import Layout from "@layouts/Layout.astro";
import { latestPosts } from "@utils/content";
---

<Layout title="">
  <Container>
    <main>
      <h2 class="text-2xl font-semibold tracking-tight lg:leading-snug text-brand-primary lg:text-3xl dark:text-white mb-4">
        Featured
      </h2>
      <div class="grid gap-10 lg:gap-10 md:grid-cols-2">
        {
          latestPosts
            .slice(0, 2)
            .map((post) => (
              <Postlist post={post} aspect="landscape" preloadImage={true} />
            ))
        }
      </div>

      <h2 class="text-2xl font-semibold tracking-tight lg:leading-snug text-brand-primary lg:text-3xl dark:text-white mt-10 mb-4">
        Latest Articles
      </h2>
      <div class="grid gap-10 lg:gap-10 md:grid-cols-2 xl:grid-cols-3">
        {
          latestPosts
            .slice(2)
            .map((post) => <Postlist post={post} aspect="square" />)
        }
      </div>
    </main>
  </Container>
</Layout>
